#include <iostream>
#include <Windows.h>
using namespace std;
int create(int array[], int first,int raz,int N){
    int i;
    array[0]=first;
    for(i=1;i<N;i++){
        array[i]=array[i-1]+raz;
    }
}
void print_array(int array[],int z){
    int i;
    for(i=0;i<z;i++){
        cout<<array[i]<<" ";
    }

}
int main() {
    SetConsoleOutputCP(CP_UTF8);
    int a,b,g;
    cout<<"Введите первый элемнт ариф. прогрессии-";
    cin>>a;
    cout<<"\n"<<"Введите разность ариф. прогрессии-";
    cin>>b;
    cout<<"\n"<<"Введите размер массива-";
    cin>>g;
    int arr[g];
    create(arr,a,b,g);
    print_array(arr,g);
}
