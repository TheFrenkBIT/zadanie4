#include <iostream>
#include <ctime>
using namespace std;
int create(int array[],int z)
{
    int i;
    srand(time(NULL));
    for (i=0;i<z;i++){
        array[i] = rand() % 1001 +1000;
    }

}
void print_array(int array[],int z){
    int i;
    for(i=0;i<z;i++){
        cout<<array[i]<<" ";
    }

}
void scan(int array[],int z){
    int i,count,l;
    count=0;
    l=0;
    for (i=0;i<z;i++){
        auto str = to_string(array[i]);
        if ((str[2]=='2') or (str[2]=='4') or (str[2]=='6') or (str[2]=='8') or (str[2]=='0')){
            count=count+1;
        }
    }
    cout<<"\n"<<count;

}

int main() {
    int n;
    cin>>n;
    int a[n];
    create(a,n);
    print_array(a,n);
    scan(a,n);
}
